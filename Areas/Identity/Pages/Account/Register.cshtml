@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<body class="bg-light">
<h1 style="text-align: center"> @ViewData["Title"]</h1>

<div class="row bg-light">
    <div class="col-lg-5 col-md-5 container justify-content-center">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group py-2">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group py-2">
                 <label asp-for="Input.Neighborhood"></label>
                 <input asp-for="Input.Neighborhood" class="form-control" />
                 <span asp-validation-for="Input.Neighborhood" class="text-danger"></span>
            </div>
            <div class="form-group py-2">
                 <label asp-for="Input.City"></label>
                 <input asp-for="Input.City" class="form-control" />
                 <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="form-group py-2">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group pt-2">
                <p class="m-0">Role</p>
                <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class=" form-select">
                    <option disabled selected>Select Role</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
